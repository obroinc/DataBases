@page
@model Databases.Pages.ListStudentsModel
@{
    ViewData["Title"] = "ListStudents";
}

<h2>List of Student Details</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model.Students)
        {
            // list out each of the properties.
            <tr>
                <td>@student.StudentID</td>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>


                <td> <a asp-page="StudentDetails" asp-route-id="@student.StudentID">Details</a> </td>
            </tr>
        }
    </tbody>
</table>